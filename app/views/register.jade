doctype html
html
head
  title Sign Up
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css", rel="stylesheet")
  link(href='../public/css/site.css', rel='stylesheet')
  link(href='../public/css/signup.css', rel='stylesheet')
  //
    HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries 
  //
    WARNING: Respond.js doesn't work if you view the page via file:// 
  //if lt IE 9
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
body.background_image
  .container
    a.navbar-brand(href='#', style='color: white;') Brand
    a(href='/').btn.btn-success.btn-custom.pull-right.adjust.btn-lgcustom2 Log In
  .container
    if msg
      .alert.alert-danger
        .a(href="#", class="close", data-dismiss="alert")&times;
        | #{msg}
    .row.form-control-1.bk
      .col-lg-12.form-background-color
        br
        h1.control1(style='color: white; text-align: center;')
          | Create Account
        h1.control(style='color: white; text-align: center;')
          | Logo
        br
        form.form-horizontal(role='form', method='post')
          .form-group
            .col-xs-offset-1.col-xs-10
              input#inputname3.form-control.form-controlcustom1(type='name', name='name', placeholder='Full Name (first & last)', required, autofocus)
          br
          .form-group
              .col-xs-offset-1.col-xs-10
                input#inputEmail3.form-control.form-controlcustom1(type='email', name='email', placeholder='Email', required)
          br
          .form-group
              .col-xs-offset-1.col-xs-10
                input#inputPassword3.form-control.form-controlcustom1(type='password', name='pass', placeholder='Password', required)
          br
          .form-group
              .col-xs-12.text-center
                button.btn.btn-success.btn-lg.btn-lgcustom1(type='submit') Sign Up
          br
